extends layout.pug

block content
  article.grid-container.portfolio-intro
    div
      h1 Elegant Solutions, Rewarding Experiences
      p.lead.text-light
        | I'm an experienced frontend developer with a penchant for pixels, user experiences, code, and teamwork.

  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0].replace("upload/", "upload/c_scale,w_440,")}`)
            h5= project.project_name
